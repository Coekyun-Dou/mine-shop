<view class="details" wx:if="{{ goodsDetails }}">
    <image class="topimage" mode="widthFix" src="{{ goodsDetails.topimage }}"></image>
    <view class="content">
        <view class="price">
            ￥<text>{{ goodsDetails.price }}</text>
        </view>
        <view class="title">
            <text>{{ goodsDetails.title }}</text>
        </view>
    </view>
    <view class="introduce">
        <block wx:for="{{ goodsDetails.details }}" wx:key="index">
            <image mode="widthFix" src="{{ item }}"></image>
        </block>
    </view>
    <view class="cart">
        <van-goods-action>
            <van-goods-action-icon icon="chat-o" text="客服" bind:click="onClickKF" />
            <van-goods-action-icon icon="cart-o" text="购物车" bind:click="onClickCart" />
            <van-goods-action-button text="加入购物车" type="warning" bind:click="onClickAddCart" />
            <van-goods-action-button text="立即购买" bind:click="onClickBuy" />
        </van-goods-action>
    </view>
</view>
<view wx:else class="details">
    <view class="content">
        <view class="title">
            <text>暂无商品信息</text>
        </view>
    </view>
</view>